@model HomeAutomex.Models.AgendamentoModel

@{
    ViewBag.Title = "RegistrarAgendamento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Registrar Agendamento</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Descricao)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Descricao)
            @Html.ValidationMessageFor(model => model.Descricao)
        </div>
         <div class="editor-label">
           Qual dispositivo deseja agendar? 
        </div>
         <div class="editor-label">
            @Html.DropDownListFor(model => model.Dispositivo, ViewBag.Dispositivo as List<SelectListItem>, "Selecione...", new { @class = "input" })
        </div>    <br />
        <div class="editor-label">
            @Html.LabelFor(model => model.Ativo)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Ativo)
            @Html.ValidationMessageFor(model => model.Ativo)
        </div>   <br />
         <div class="editor-label">
            @Html.LabelFor(model => model.DataAgendamento)
        </div>
              <div class="editor-field">
               
  <div id="datetimepicker4" class="input-append">
    @Html.EditorFor(model => model.Hora)
    <span class="add-on">
      <i data-time-icon="icon-time" data-date-icon="icon-calendar">
      </i>
    </span>
  </div>
     <div id="datetimepicker4" class="input-append">
    @Html.EditorFor(model => model.Data)
    <span class="add-on">
      <i data-time-icon="icon-time" data-date-icon="icon-calendar">
      </i>
    </span>
  </div>

        </div> 
        <br />

        <p>
           <input type="submit" value="Registrar" class="btn-glow primary login" />
        </p>
    </fieldset>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script src="~/Scripts/bootstrap-datetimepicker.min.js"></script>
<link href="~/css/bootstrap-datetimepicker.min.css" rel="stylesheet" />

<script type="text/javascript">
    $(function () {
        $('#datetimepicker4').datetimepicker({
            pickTime: false
        });
    });
</script>
<script type="text/javascript">
    $(function () {
        $('#datetimepicker3').datetimepicker({
            pickDate: false
        });
    });
</script>

