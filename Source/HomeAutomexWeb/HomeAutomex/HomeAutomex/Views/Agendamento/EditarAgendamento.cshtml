@model HomeAutomex.Models.AgendamentoModel

@{
    ViewBag.Title = "EditarAgendamento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Editar Agendamento</legend>
        <div class="editor-label">
            @Html.LabelFor(model => model.Descricao)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Descricao)
            @Html.ValidationMessageFor(model => model.Descricao)
        </div><br />
         <div class="editor-label">
            @Html.LabelFor(model => model.Dispositivo)
        </div> 
         <div class="editor-label">
            @Html.DropDownListFor(model => model.Dispositivo, ViewBag.Dispositivo as List<SelectListItem>, "Selecione...", new { @class = "input" })
        </div><br />
        <div class="editor-label">
            @Html.LabelFor(model => model.Ativo)
        </div> 
        <div class="editor-field">
            @Html.EditorFor(model => model.Ativo)
            @Html.ValidationMessageFor(model => model.Ativo)
        </div>   <br />
         <div class="editor-label">
            @Html.LabelFor(model => model.DataAgendamento)
        </div> 
                      <div class="editor-field">
             @Html.Editor("DataHoraAgendamento")
        @*    @Html.ValidationMessageFor(model => model.DataAgendamento)*@
        </div> 
        <br />
        <p>
              <input type="submit" value="Editar" class="btn-glow primary login" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<script src="~/Scripts/jquery.mask.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $("#DataHoraAgendamento").mask('00/00/0000 00:00:00');
    });
</script>
