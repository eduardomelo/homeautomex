@model HomeAutomex.Models.ModuloModel

@{
    ViewBag.Title = "Registrar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm()) {
    @Html.ValidationSummary()
    @Html.AntiForgeryToken()
    <fieldset>
        <legend>Registrar modulo</legend>
         <div class="editor-label">
            @Html.LabelFor(model => model.Residencia)
        </div> 
      <div class="editor-label"> 
       @Html.DropDownList("residencia",ViewBag.Residencias as List<SelectListItem>, new { @class = "input" })
        </div>
        <br /> 
            
        <div class="editor-label">
            @Html.LabelFor(model => model.NumeroIP)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NumeroIP)
            @Html.ValidationMessageFor(model => model.NumeroIP)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.NumeroPorta)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NumeroPorta)
            @Html.ValidationMessageFor(model => model.NumeroPorta)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Nome)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Nome)
            @Html.ValidationMessageFor(model => model.Nome)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.NumeroMac)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NumeroMac)
            @Html.ValidationMessageFor(model => model.NumeroMac)
        </div>

        <p>
            <input type="submit" value="Registrar" class="btn-glow primary login"/>
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Voltar", "ListarModulo")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
