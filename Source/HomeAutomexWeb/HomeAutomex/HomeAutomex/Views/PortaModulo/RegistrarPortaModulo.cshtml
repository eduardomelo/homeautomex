@model HomeAutomex.Models.PortaModuloModel

@{
    ViewBag.Title = "RegistrarPortaModulo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Registrar Porta do modulo</legend>
         <div class="editor-label">
            @Html.LabelFor(model => model.TipoPorta)
        </div>
        <div class="editor-label">
       @Html.DropDownList("tipoPorta",ViewBag.TipoPorta as List<SelectListItem>, new { @class = "input"})
        </div>
        <br /> 
         <div class="editor-label">
            @Html.LabelFor(model => model.Modulo)
        </div>
        <div class="editor-label">
       @Html.DropDownList("modulo",ViewBag.Modulo as List<SelectListItem>, new { @class = "input"})
        </div>
        <br /> 

        <div class="editor-label">
            @Html.LabelFor(model => model.Identificador)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Identificador)
            @Html.ValidationMessageFor(model => model.Identificador)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.NumeroPorta)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NumeroPorta)
            @Html.ValidationMessageFor(model => model.NumeroPorta)
        </div>

        

        <p>
            <input type="submit" value="Registrar"  class="btn-glow primary login"/>
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Voltar", "ListarPortaModulo")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
