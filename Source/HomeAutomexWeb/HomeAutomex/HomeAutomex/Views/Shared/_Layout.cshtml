<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8" />
    <title>@ViewBag.Title - Home Automex</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">


    <!-- bootstrap -->
    <link href="~/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/bootstrap-overrides.css" rel="stylesheet" />


    @*<link href="~/css/bootstrap.min.css" rel="stylesheet">*@
    <link href="~/css/bootstrap-switch.css" rel="stylesheet">
    <link href="~/css/datepicker.css" rel="stylesheet" />

    <!-- global styles -->
    <link href="~/css/elements.css" rel="stylesheet" />
    <link href="~/css/layout.css" rel="stylesheet" />
    <link href="~/css/icons.css" rel="stylesheet" />
    <link href="~/css/App.css" rel="stylesheet" />

    <!-- libraries -->
    <link href="~/css/font-awesome.css" rel="stylesheet" />


    <!-- this page specific styles -->
    <link href="~/css/tables.css" rel="stylesheet" />

    <!-- open sans font -->
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css' />

    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
</head>
<body>

    <!-- navbar -->
    <header class="navbar navbar-inverse" role="banner">
        <div class="navbar-header">
            <button class="navbar-toggle" type="button" data-toggle="collapse" id="menu-toggler">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="index.html">Home Automex</a>
        </div>
        <ul class="nav navbar-nav pull-right hidden-xs">
            <li class="hidden-xs hidden-sm">
              
            </li>
        
           
            <li class="dropdown">
                <a href="#" class="dropdown-toggle hidden-xs hidden-sm" data-toggle="dropdown">Automação Residêncial
                  
                </a>
          
            </li>
    
            <li class="settings hidden-xs hidden-sm">
                <li>@Html.ActionLink("Sair", "Login", "Account")</li>
            </li>
        </ul>
    </header>
    <!-- end navbar -->

    <!-- sidebar -->
    <div id="sidebar-nav">
        <ul id="dashboard-menu">
            <li class="active">
                <div class="pointer">
                    <div class="arrow"></div>
                    <div class="arrow_border"></div>
                </div>
                <a href="@Url.Action("Index", "Home")">
                    <i class="icon-th-large"></i>
                    <span>Home</span>
                </a>
            </li>
                        <li >
                <div class="pointer">
                    <div class="arrow"></div>
                    <div class="arrow_border"></div>
                </div>
                <a href="@Url.Action("ListarDispositivo", "DispositivosFavoritos")">
                    <i class="icon-star"></i>
                    <span>Favoritos</span>
                </a>
            </li>
          
               <li>
                <a class="dropdown-toggle" href="#">
                    <i class="icon-film"></i>
                    <span>Cenário</span>
                    <i class="icon-chevron-down"></i>
                </a>
                <ul class="submenu">
                     <li>@Html.ActionLink("Ativar", "AtivarCenario", "Cenario")</li>
                    <li>@Html.ActionLink("Dispositivos", "AssociarDispositivo", "Cenario")</li>
                    <li>@Html.ActionLink("Novo", "ListarCenario", "Cenario")</li>
                     

                </ul>
            </li>

            <li>
                <a class="dropdown-toggle" href="#">
                    <i class="icon-signal"></i>
                    <span>Relatórios</span>
                    <i class="icon-chevron-down"></i>
                </a>
                <ul class="submenu">
                    <li>@Html.ActionLink("Uso", "ListarHistoricoUsoDispositivo", "Relatorio")</li>
                    <li>@Html.ActionLink("Logs", "ListarLogs", "Relatorio")</li>
                 

                </ul>
            </li>

             <li >
                <div class="pointer">
                    <div class="arrow"></div>
                    <div class="arrow_border"></div>
                </div>
                <a href="@Url.Action("ListarUsuario", "Account")">
                    <i class="icon-group"></i>
                    <span>Usuários</span>
                </a>
            </li>
                       <li >
                <div class="pointer">
                    <div class="arrow"></div>
                    <div class="arrow_border"></div>
                </div>
                <a href="@Url.Action("ListarAgendamento", "Agendamento")">
                    <i class="icon-edit"></i>
                    <span>Agendamento</span>
                </a>
            </li>
          
             <li >
                <div class="pointer">
                    <div class="arrow"></div>
                    <div class="arrow_border"></div>
                </div>
                <a href="@Url.Action("ListarResidencia", "Residencia")">
                    <i class="icon-home"></i>
                    <span>Residência</span>
                </a>
            </li> 
             <li >
                <div class="pointer">
                    <div class="arrow"></div>
                    <div class="arrow_border"></div>
                </div>
                <a href="@Url.Action("ListarAmbiente", "Ambiente")">
                    <i class="icon-qrcode"></i>
                    <span>Ambiente</span>
                </a>
            </li>
             <li >
                <div class="pointer">
                    <div class="arrow"></div>
                    <div class="arrow_border"></div>
                </div>
                <a href="@Url.Action("ListarDispositivo", "Dispositivo")">
                    <i class="icon-sitemap"></i>
                    <span>Dispositivo</span>
                </a>
            </li>
           
            <li>
                <a class="dropdown-toggle" href="#">
                    <i class="icon-cog"></i>
                    <span>Config</span>
                    <i class="icon-chevron-down"></i>
                </a>
                <ul class="submenu">
                    <li>@Html.ActionLink("Tipo de Porta", "ListarTipoPorta", "TipoPorta")</li>
                    <li>@Html.ActionLink("Modulo", "ListarModulo", "Modulo")</li>
                    <li>@Html.ActionLink("Porta do Modulo", "Listar", "Porta")</li>

                </ul>
            </li>
            <li>
            <li>
                <a class="dropdown-toggle" href="#">
                    <i class="icon-off"></i>
                    <span>Sair</span>
                    <i class="icon-chevron-down"></i>
                </a>
                <ul class="submenu">
                    <li>@Html.ActionLink("Deseja sair?", "Login")</li>

                </ul>
            </li>
        </ul>
    </div>
    <!-- end sidebar -->
    <!-- upper main stats -->

    <!-- main container -->
    <div class="content">

        <!-- settings changer -->
        @*  <div class="skins-nav">
            <a href="#" class="skin first_nav selected">
                <span class="icon"></span><span class="text">Default</span>
            </a>
            <a href="#" class="skin second_nav" data-file="~/css/dark.css">
                <span class="icon"></span><span class="text">Dark skin</span>
            </a>
        </div>*@

        <div id="pad-wrapper">

            @RenderBody()


        </div>
    </div>
    <!-- end main container -->

    <!-- scripts -->
    @RenderSection("scripts", required: false)

    @*<script src="http://code.jquery.com/jquery-latest.js"></script>*@
    <script src="../Scripts/theme.js"></script>
    <script src="~/Scripts/bootstrap-datepicker.js"></script>
</body>
</html>
