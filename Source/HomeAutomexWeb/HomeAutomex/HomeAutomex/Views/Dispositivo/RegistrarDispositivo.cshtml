@model HomeAutomex.Models.DispositivoModel

@{
    ViewBag.Title = "RegistrarDispositico";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Registrar novo Dispositivo</legend>
            <div class="editor-label">
            @Html.LabelFor(model => model.PortaModulo)
        </div>
        <div>
         @Html.DropDownList("portaModulo",ViewBag.PortaModulo as List<SelectListItem>, new { @class="input" })
        </div>
        <br /> 
            
    
        <div class="editor-label">
            @Html.LabelFor(model => model.Descricao)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Descricao)
            @Html.ValidationMessageFor(model => model.Descricao)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Desativado)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Desativado)
            @Html.ValidationMessageFor(model => model.Desativado)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Status)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Status)
            @Html.ValidationMessageFor(model => model.Status)
        </div><br />

       

        <p>
            <input type="submit" value="Registrar" class="btn-glow primary login" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
