@model HomeAutomex.Models.DispositivoModel

@{
    ViewBag.Title = "EditarDispositivo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Editar Dispositivo</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Descricao)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Descricao)
            @Html.ValidationMessageFor(model => model.Descricao)
        </div>
        <br />
        <div class="editor-label">
            @Html.LabelFor(model => model.ChavePorta)
        </div>
        <div>
            @Html.DropDownListFor(model => model.ChavePorta, ViewBag.PortaModulo as List<SelectListItem>, "Selecione...", new { @class = "input" })
        </div>
        <br />
        <div class="editor-label">
            @Html.LabelFor(model => model.ChaveAmbiente)
        </div>
        <div>
            @Html.DropDownListFor(model => model.ChaveAmbiente, ViewBag.Ambientes as List<SelectListItem>, "Selecione...", new { @class = "input" })
        </div>
        <br />
        <div class="editor-label">
            @Html.LabelFor(model => model.Favorito)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Favorito)
            @Html.ValidationMessageFor(model => model.Favorito)
        </div>
        <br />
        <p>
            <input type="submit" value="Editar" class="btn-glow primary login" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Voltar", "ListarDispositivo")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
