@model HomeAutomex.Models.CenarioModel

@{
    ViewBag.Title = "AtivarCenario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Ativar Cenário</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Descricao)
        </div>
        <div>
            @Html.DropDownListFor(model => model.Chave, ViewBag.Cenario as List<SelectListItem>, "Selecione...", new { @class = "inputCenario" })
        </div><br /><br />

        <p>
            <input type="submit" value="Ativar" class="btn-glow primary login" />
        </p>
    </fieldset>
}

@using (Html.BeginForm("DesativarCenarioDespositivo", "Cenario"))
{
    <fieldset>
        <legend>Desativar Cenário</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Descricao)
        </div>
        <div>
            @Html.DropDownListFor(model => model.Chave, ViewBag.Cenario as List<SelectListItem>, "Selecione...", new { @class = "inputCenario" })
        </div><br /><br />

        <p>
            <input type="submit" value="Desativar" class="btn-glow primary login" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
