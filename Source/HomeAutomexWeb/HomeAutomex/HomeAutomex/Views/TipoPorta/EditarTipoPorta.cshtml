@model HomeAutomex.Models.TipoPortaModel

@{
    ViewBag.Title = "EditarTipoPorta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Editar Tipo de Porta </legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Tipo)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Tipo)
            @Html.ValidationMessageFor(model => model.Tipo)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Identificador)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Identificador)
            @Html.ValidationMessageFor(model => model.Identificador)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Chave)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Chave)
            @Html.ValidationMessageFor(model => model.Chave)
        </div>

        <p>
            <input type="submit" value="Editar"  class="btn-glow primary login"/>
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Voltar", "ListarTipoPorta")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
