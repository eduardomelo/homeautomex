@model HomeAutomex.Models.PortaModel

@{
    ViewBag.Title = "Registrar porta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Registrar Porta</legend>
        <div class="editor-label">
            @Html.LabelFor(model => model.Identificador)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Identificador)
            @Html.ValidationMessageFor(model => model.Identificador)
        </div>
        <br />
        <div class="editor-label">
            @Html.LabelFor(model => model.NumeroPorta)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NumeroPorta)
            @Html.ValidationMessageFor(model => model.NumeroPorta)
        </div>
         <div class="editor-label">
            @Html.LabelFor(model => model.ChaveTipoPorta)
        </div>
        <div class="editor-label">
       @Html.DropDownListFor(model => model.ChaveTipoPorta,ViewBag.TipoPorta as List<SelectListItem>,"Selecione...", new { @class = "input"})
        </div>
        <br /> 
         <div class="editor-label">
            @Html.LabelFor(model => model.ChaveModulo)
        </div>
        <div class="editor-label">
       @Html.DropDownListFor(model => model.ChaveModulo,ViewBag.Modulo as List<SelectListItem>,"Selecione...", new { @class = "input"})
        </div>
        <br /> 
        <p>
            <input type="submit" value="Registrar"  class="btn-glow primary login"/>
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Voltar", "ListarPortaModulo")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
