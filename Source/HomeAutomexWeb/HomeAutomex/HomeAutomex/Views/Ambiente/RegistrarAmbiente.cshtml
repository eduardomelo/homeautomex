@model HomeAutomex.Models.AmbienteModel

@{
    ViewBag.Title = "RegistrarAmbiente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <fieldset>
        <legend>Registar Ambiente</legend>
        <div class="editor-label">
            @Html.LabelFor(model => model.Descricao)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Descricao)
            @Html.ValidationMessageFor(model => model.Descricao)
        </div>
        <br />
        <div class="editor-label">
            @Html.LabelFor(model => model.ChaveResidencia)
        </div>
        <div class="editor-label">
            @Html.DropDownListFor(model => model.ChaveResidencia, ViewBag.Residencias as List<SelectListItem>, "Selecione...", new { @class = "input" })
        </div>
        <p>
            <input type="submit" value="Registar" class="btn-glow primary login" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Voltar", "ListarAmbiente")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
