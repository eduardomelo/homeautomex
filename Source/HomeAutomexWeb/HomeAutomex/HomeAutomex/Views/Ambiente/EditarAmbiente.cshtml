@model HomeAutomex.Models.AmbienteModel

@{
    ViewBag.Title = "EditarAmbiente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <fieldset>
        <legend>Editar Ambiente</legend>
        
        <div class="editor-label">
            @Html.LabelFor(model => model.Descricao)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Descricao)
            @Html.ValidationMessageFor(model => model.Descricao)
        </div>
        <br />
          <div class="editor-label">
            @Html.LabelFor(model => model.Residencia)
        </div>
         <div class="editor-label"> 
             @Html.DropDownListFor(model => model.ChaveResidencia, ViewBag.Residencias as List<SelectListItem>,"Selecione...", new { @class = "input"})
        </div>
        <br />
        <p>
            <input type="submit" value="Editar" class="btn-glow primary login" />
        </p>
    </fieldset>
}
<div>
      @Html.ActionLink("Voltar", "ListarAmbiente")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
